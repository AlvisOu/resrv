<% if flash[:notice] %>
  <div class="alert alert-info" role="alert" id="notice">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-danger" role="alert" id="alert">
    <%= flash[:alert] %>
  </div>
<% end %>
<% if flash[:warning] %>
  <div class="alert alert-warning" role="alert" id="warning">
    <%= flash[:warning] %>
  </div>
<% end %>