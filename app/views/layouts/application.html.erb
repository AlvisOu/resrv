<%# Our "base" layout should be a valid HTML document. %>
<!DOCTYPE html>
<html>
  <head>
    <title>resrv</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', 'media' => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <nav>
        <% if logged_in? %>
          Logged in as <%= current_user.name %> |
          <%= link_to "My Profile", profile_path, class: "button" %> | 
          <%= link_to "My Reservations", reservations_path, class: "button" %> |
          <% cart = Cart.load(session, current_user&.id) rescue nil %>
          <%= link_to "Cart#{cart ? " (#{cart.total_count})" : ""}", cart_path, class: "nav-link" %>
          <%= link_to "Log Out", logout_path, method: :delete %>
        <% end %>
      </nav>
    </header>
    <div class="container">
      <%= render 'layouts/flash' %>
      <main id="main">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
