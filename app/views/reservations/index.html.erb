<div class="row justify-content-center">
  <div class="col-lg-10">
    <div class="d-flex align-items-center mb-4">
      <h1 class="h3 mb-0 mr-3">My Reservations</h1>
      <span class="badge badge-pill badge-primary"><%= @reservations.count %> total</span>
    </div>

    <%
      now = Time.current
      upcoming_res = @reservations.select { |r| r.end_time >= now }
      past_res     = @reservations.select { |r| r.end_time < now }.reverse
    %>

    <% if @reservations.empty? %>
      <div class="text-center py-5 bg-white rounded shadow-sm">
        <div class="mb-3 text-muted" style="font-size: 3rem;">üìÖ</div>
        <h5 class="text-muted">No reservations yet</h5>
        <p class="text-muted mb-4">You haven't made any reservations.</p>
        <%= link_to "Browse Workspaces", workspaces_path, class: "btn btn-primary" %>
      </div>
    <% else %>
      <div class="card no-transform shadow-sm mb-4">
        <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
          <ul class="nav nav-tabs card-header-tabs mb-3" id="reservationTabs" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="upcoming-tab" data-toggle="tab" href="#upcoming" role="tab" aria-controls="upcoming" aria-selected="true">
                Upcoming <span class="badge badge-light ml-1"><%= upcoming_res.count %></span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="history-tab" data-toggle="tab" href="#history" role="tab" aria-controls="history" aria-selected="false">
                History <span class="badge badge-light ml-1"><%= past_res.count %></span>
              </a>
            </li>
          </ul>
        </div>

        <div class="card-body">
          <div class="tab-content" id="reservationTabsContent">
            <!-- Upcoming Tab -->
            <div class="tab-pane fade show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
              <% if upcoming_res.any? %>
                <%= render "table", reservations: upcoming_res, show_actions: true %>
              <% else %>
                <div class="text-center py-5">
                  <p class="text-muted">No upcoming reservations.</p>
                  <%= link_to "Make a Reservation", workspaces_path, class: "btn btn-sm btn-outline-primary" %>
                </div>
              <% end %>
            </div>

            <!-- History Tab -->
            <div class="tab-pane fade" id="history" role="tabpanel" aria-labelledby="history-tab">
              <% if past_res.any? %>
                <%= render "table", reservations: past_res, show_actions: false %>
              <% else %>
                <div class="text-center py-5">
                  <p class="text-muted">No past reservations.</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    
    <div class="text-center mt-4 mb-5">
      <%= link_to workspaces_path, class: "text-muted text-decoration-none" do %>
        ‚Üê Back to Workspaces
      <% end %>
    </div>
  </div>
</div>
