<div class="reservation-shell">
  <div class="reservation-hero">
    <div>
      <p class="eyebrow">Reservation</p>
      <h1 class="title">Reservation Details</h1>
      <p class="subhead">Review the booking, timing, and actions below.</p>
    </div>
    <div class="status-pill <%= @reservation.no_show? ? 'pill-danger' : 'pill-safe' %>">
      <%= @reservation.no_show? ? "No Show" : "Confirmed" %>
    </div>
  </div>

  <div class="reservation-card">
    <div class="meta-grid">
      <div class="meta">
        <p class="label">User</p>
        <p class="value"><%= @reservation.user.name %> (<%= @reservation.user.email %>)</p>
      </div>
      <div class="meta">
        <p class="label">Workspace</p>
        <p class="value"><%= @reservation.item.workspace.name %></p>
      </div>
      <div class="meta">
        <p class="label">Item</p>
        <p class="value"><%= @reservation.item.name %></p>
      </div>
      <div class="meta">
        <p class="label">Quantity</p>
        <p class="value"><%= @reservation.quantity %></p>
      </div>
      <div class="meta">
        <p class="label">Starts</p>
        <p class="value"><%= @reservation.start_time.strftime("%b %d, %Y %I:%M %p") %></p>
      </div>
      <div class="meta">
        <p class="label">Ends</p>
        <p class="value"><%= @reservation.end_time.strftime("%b %d, %Y %I:%M %p") %></p>
      </div>
    </div>

    <% if @reservation.no_show? %>
      <div class="alert-note">No-show marked for this reservation.</div>
    <% end %>

    <div class="actions">
      <%= button_to "Cancel Reservation",
                    owner_cancel_reservation_path(@reservation),
                    method: :patch,
                    class: "btn btn-danger action-btn",
                    data: { confirm: "Cancel this reservation and notify the user?" } %>
      <%= link_to "Back to Workspace", @workspace, class: "btn btn-secondary action-btn" %>
    </div>
  </div>
</div>
