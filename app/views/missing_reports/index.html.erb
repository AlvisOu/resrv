

<h1 class="page-title">Missing Items for <%= @workspace.name %></h1>

<% if @unresolved_reports.any? %>
  <h2 class="section-title">Currently Missing</h2>
  <% @unresolved_reports.sort_by(&:created_at).reverse.each do |report| %>
    <%= render "report_card", report: report, resolved: false %>
  <% end %>
<% else %>
  <p class="no-missing-msg">ğŸ‰ No missing items currently reported.</p>
<% end %>

<% if @resolved_reports.any? %>
  <h2 class="section-title">Resolved Reports</h2>
  <% @resolved_reports.sort_by(&:updated_at).reverse.each do |report| %>
    <%= render "report_card", report: report, resolved: true %>
  <% end %>
<% end %>
