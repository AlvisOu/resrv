
<div class="missing-shell">
  <div class="missing-hero">
    <div>
      <p class="eyebrow">Inventory</p>
      <h1 class="page-title">Missing Items for <%= @workspace.name %></h1>
      <p class="subhead">Track what went out and hasnâ€™t returned yet, and mark items back online when found.</p>
    </div>
    <div class="pill pill-info">
      <%= pluralize(@unresolved_reports.count, "open report") %>
    </div>
  </div>

  <style>
    .missing-shell { max-width: 1080px; margin: 0 auto; padding: 20px 0 32px; }
    .missing-hero { display: flex; align-items: center; justify-content: space-between; gap: 16px; margin-bottom: 12px; }
    .eyebrow { margin: 0; font-size: 12px; letter-spacing: 0.08em; text-transform: uppercase; color: #94a3b8; font-weight: 700; }
    .page-title { margin: 4px 0 6px; font-size: 28px; color: #0f172a; font-weight: 800; }
    .subhead { margin: 0; color: #64748b; font-size: 15px; }
    .pill { padding: 10px 14px; border-radius: 999px; font-weight: 700; font-size: 13px; border: 1px solid #bfdbfe; background: #e0f2fe; color: #0369a1; }
    .section-title { margin: 24px 0 12px; font-size: 18px; font-weight: 800; color: #0f172a; }
    .no-missing-msg { padding: 12px 0; color: #16a34a; font-weight: 700; }
  </style>

  <% if @unresolved_reports.any? %>
    <h2 class="section-title">Currently Missing</h2>
    <% @unresolved_reports.sort_by(&:created_at).reverse.each do |report| %>
      <%= render "report_card", report: report, resolved: false %>
    <% end %>
  <% else %>
    <p class="no-missing-msg">ðŸŽ‰ No missing items currently reported.</p>
  <% end %>

  <% if @resolved_reports.any? %>
    <h2 class="section-title">Resolved Reports</h2>
    <% @resolved_reports.sort_by(&:updated_at).reverse.each do |report| %>
      <%= render "report_card", report: report, resolved: true %>
    <% end %>
  <% end %>
</div>
