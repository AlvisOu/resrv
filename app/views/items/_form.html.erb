<%= form_with model: [@workspace, @item], local: true, html: { class: "styled-form", id: "item-form" } do |f| %>
  <div class="field">
    <%= f.label :name, "Item Name", class: "form-label" %>
    <%= f.text_field :name, required: true, class: "form-control", placeholder: "e.g., Camera Kit" %>
  </div>

  <div class="field">
    <%= f.label :quantity, "Quantity", class: "form-label" %>
    <%= f.number_field :quantity, min: 0, required: true, class: "form-control", placeholder: "10" %>
  </div>

  <div class="field two-up">
    <div>
      <%= f.label :start_time, "Available From", class: "form-label" %>
      <%= f.time_select :start_time, minute_step: 15, class: "form-control" %>
    </div>
    <div>
      <%= f.label :end_time, "Available Until", class: "form-label" %>
      <%= f.time_select :end_time, minute_step: 15, class: "form-control" %>
    </div>
  </div>
<% end %>

<div class="form-actions">
  <button type="submit" form="item-form" class="btn-primary-lite">Confirm</button>
  <% if @item.persisted? %>
    <%= form_with model: [@workspace, @item], method: :delete, local: true do |f| %>
      <%= f.submit "Delete Item", data: { confirm: "Are you sure you want to delete this item?" }, class: "btn-danger-solid" %>
    <% end %>
  <% end %>
</div>

<div class="footer-actions">
  <%= link_to "â† Back to Workspace", workspace_path(@workspace), class: "link-inline" %>
</div>
<style>
  .styled-form .form-label { display:block; margin-bottom:8px; color:#111827; font-weight:600; }
  .styled-form .form-control { width:100%; padding:12px 14px; border:1px solid #d1d5db; border-radius:10px; font-size:15px; }
  .styled-form .two-up { display:grid; gap:16px; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); align-items:end; }
  .styled-form .field { margin-bottom: 16px; }
  .form-actions { margin-top:16px; display:flex; gap:12px; justify-content:center; align-items:center; flex-wrap:wrap; }
  .footer-actions { margin-top:12px; text-align:center; }
  .link-inline { color: #0ea5e9; font-weight:600; text-decoration:none; }
  .link-inline:hover { text-decoration:underline; }
  .btn-danger-solid {
    background: #b91c1c;
    color: #fff;
    border: none;
    padding: 10px 14px;
    border-radius: 10px;
    cursor: pointer;
  }
  .btn-primary-lite {
    background: linear-gradient(135deg, #111827, #1f2937);
    color: #fff;
    border: none;
    padding: 10px 16px;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
  }
</style>
