<div class="auth-shell">
  <div class="auth-card">
    <h1 class="auth-title">Create your account</h1>
    <p class="auth-subtitle">Join your workspaces and start booking.</p>

    <% if @user.errors.any? %>
      <div class="alert alert-danger" style="margin-bottom: 16px;">
        <strong><%= pluralize(@user.errors.count, "error") %> prevented signup:</strong>
        <ul style="margin: 8px 0 0 18px; color:#991b1b;">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @user, html: { class: "auth-form" }) do |form| %>
      <div class="field">
        <%= form.label :name, "Full name", class: "form-label" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Alex Johnson", required: true %>
      </div>

      <div class="field">
        <%= form.label :email, "Email", class: "form-label" %>
        <%= form.email_field :email, class: "form-control", placeholder: "you@example.com", required: true %>
      </div>

      <div class="field">
        <%= form.label :password, "Password", class: "form-label" %>
        <%= form.password_field :password, class: "form-control", placeholder: "••••••••", required: true %>
      </div>

      <div class="field">
        <%= form.label :password_confirmation, "Confirm password", class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Match your password", required: true %>
      </div>

      <div class="actions">
        <%= form.submit "Create Account", class: "btn-primary-wide" %>
      </div>

      <div class="auth-links">
        <span>Already have an account?</span>
        <%= link_to "Log In", login_path %>
      </div>
    <% end %>
  </div>
</div>


