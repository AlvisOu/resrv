<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-sm mb-4">
      <div class="card-body text-center p-5">
        <div class="mb-3">
          <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
            <span class="h2 mb-0 text-secondary"><%= @user.name.first.upcase %></span>
          </div>
        </div>
        <h1 class="h3 mb-1"><%= @user.name %></h1>
        <p class="text-muted mb-0"><%= @user.email %></p>
      </div>
    </div>

    <% if @workspace_penalties.any? %>
      <div class="card shadow-sm mb-4 border-warning">
        <div class="card-header bg-warning text-dark border-bottom-0">
          <h5 class="mb-0"><i class="fas fa-exclamation-triangle mr-2"></i> Active Penalties</h5>
        </div>
        <div class="list-group list-group-flush">
          <% @workspace_penalties.each do |workspace, penalties| %>
            <% penalties.each do |penalty| %>
              <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between align-items-start">
                  <div>
                    <h6 class="mb-1 font-weight-bold"><%= workspace.name %></h6>
                    <p class="mb-1 text-danger"><%= penalty.reason.titleize %></p>
                    <small class="text-muted">Expires: <%= penalty.expires_at.strftime("%b %d, %Y %I:%M %p") %></small>
                  </div>
                  
                  <% if penalty.appeal_pending? %>
                    <span class="badge badge-warning text-dark">Appeal Pending</span>
                  <% elsif penalty.appeal_state == "resolved" %>
                    <span class="badge badge-success">Appeal Reviewed</span>
                  <% else %>
                    <%= form_with url: appeal_penalty_path(penalty), method: :post, local: true, class: "form-inline" do %>
                      <div class="input-group input-group-sm">
                        <%= text_field_tag :appeal_message, nil, placeholder: "Reason for appeal", class: "form-control", style: "width: 200px;" %>
                        <div class="input-group-append">
                          <%= submit_tag "Appeal", class: "btn btn-outline-primary" %>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
                
                <% if penalty.appeal_message.present? %>
                  <div class="mt-2 p-2 bg-light rounded small text-muted">
                    <em>"<%= penalty.appeal_message %>"</em>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="card shadow-sm mb-4">
      <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
        <h5 class="mb-0">Edit Profile</h5>
      </div>
      <div class="card-body">
        <%= form_with model: @user, url: profile_path, method: :patch do |f| %>
          <div class="form-group mb-3">
            <%= f.label :name, "Full Name", class: "font-weight-bold small text-uppercase text-muted" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group mb-3">
                <%= f.label :password, "New Password", class: "font-weight-bold small text-uppercase text-muted" %>
                <%= f.password_field :password, class: "form-control", placeholder: "Leave blank to keep current" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group mb-3">
                <%= f.label :password_confirmation, "Confirm New Password", class: "font-weight-bold small text-uppercase text-muted" %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="mt-3">
            <%= f.submit "Update Profile", class: "btn btn-primary px-4" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="card shadow-sm border-danger">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h6 class="text-danger mb-1">Delete Account</h6>
          <p class="text-muted small mb-0">Permanently remove your account and all data.</p>
        </div>
        <%= button_to "Delete My Account", user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete your account? This cannot be undone." }, class: "btn btn-outline-danger btn-sm" %>
      </div>
    </div>
    
    <div class="text-center mt-4 mb-5">
      <%= link_to "â† Back to Workspaces", workspaces_path, class: "text-muted text-decoration-none" %>
    </div>
  </div>
</div>
