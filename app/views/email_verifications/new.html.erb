<%# app/views/email_verifications/new.html.erb %>

<h2>Verify Your Email</h2>
<p>
  We sent a 6-digit code to <strong><%= @user.email %></strong>.
  Please enter it below.
</p>

<%# Display flash messages %>
<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>

<%= form_with url: verify_email_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :verification_code, "Verification Code" %>
    <%= form.text_field :verification_code, maxlength: 6, size: 6 %>
  </div>

  <div>
    <%= form.submit "Verify" %>
  </div>
<% end %>

