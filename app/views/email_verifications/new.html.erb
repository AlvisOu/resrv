<div class="auth-shell">
  <div class="auth-card">
    <h1 class="auth-title">Verify your email</h1>
    <p class="auth-subtitle">
      We sent a 6-digit code to <strong><%= @user.email %></strong>.
      Enter it below to continue.
    </p>

    <% if flash[:alert] %>
      <div class="alert alert-danger" style="margin-bottom:12px;"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with url: verify_email_path, method: :post, local: true, html: { class: "auth-form" } do |form| %>
      <div class="field">
        <%= form.label :verification_code, "Verification Code", class: "form-label" %>
        <%= form.text_field :verification_code,
                            maxlength: 6,
                            size: 6,
                            class: "form-control code-input",
                            placeholder: "123456",
                            required: true,
                            autocomplete: "one-time-code" %>
      </div>

      <div class="actions">
        <%= form.submit "Verify", class: "btn-primary-wide" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "Back to Log In", login_path %>
    </div>
  </div>
</div>

