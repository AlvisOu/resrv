<div class="row mb-4 align-items-center">
  <div class="col-md-8">
    <h1 class="display-4">Workspaces</h1>
    <p class="lead text-muted">Find and book resources in your workspaces.</p>
  </div>
  <div class="col-md-4 text-md-right">
    <%= link_to new_workspace_path, class: "btn btn-primary btn-lg shadow-sm" do %>
      <i class="fas fa-plus"></i> Create New Workspace
    <% end %>
  </div>
</div>

<div class="search-bar mb-5">
  <%= form_with(url: workspaces_path, method: :get, local: true, class: "form-inline justify-content-center") do |form| %>
    <div class="input-group w-100">
      <%= form.text_field :query, value: params[:query], class: "form-control form-control-lg border-0", placeholder: "Search workspaces by name or ID..." %>
      <div class="input-group-append">
        <%= form.submit "Search", class: "btn btn-primary btn-lg px-4" %>
      </div>
    </div>
  <% end %>
</div>

<% if params[:query].present? %>
  <h2 class="section-title">Search Results</h2>
  <% if @workspaces.any? %>
    <div class="row">
      <% @workspaces.each do |workspace| %>
        <div class="col-md-4">
          <div class="card workspace-card h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= workspace.name %></h5>
              <p class="card-text text-muted">ID: <%= workspace.id %></p>
              <div class="mt-auto">
                <%= link_to "View Workspace", workspace_path(workspace), class: "btn btn-outline-primary btn-block" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center">
      No workspaces found matching "<%= params[:query] %>".
    </div>
  <% end %>

<% else %>

  <% if @owned_workspaces.any? %>
    <h2 class="section-title mt-4">Workspaces I Own</h2>
    <div class="row">
      <% @owned_workspaces.each do |workspace| %>
        <div class="col-md-4">
          <div class="card workspace-card h-100 border-primary position-relative">
            <div class="card-body d-flex flex-column">
              <div class="d-flex justify-content-between align-items-start">
                <h5 class="card-title text-primary"><%= workspace.name %></h5>
                <span class="badge badge-primary">Owner</span>
              </div>
              <p class="card-text text-muted line-clamp-2"><%= workspace.description %></p>
              <div class="mt-auto">
                <%= link_to "Manage Workspace", workspace_path(workspace), class: "btn btn-primary btn-block stretched-link" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @joined_workspaces.any? %>
    <h2 class="section-title mt-5">Workspaces I Joined</h2>
    <div class="row">
      <% @joined_workspaces.each do |workspace| %>
        <div class="col-md-4">
          <div class="card workspace-card h-100">
            <div class="card-body d-flex flex-column">
              <div class="d-flex justify-content-between align-items-start">
                <h5 class="card-title"><%= workspace.name %></h5>
                <span class="badge badge-secondary">Member</span>
              </div>
              <p class="card-text text-muted">Book resources and view availability.</p>
              <div class="mt-auto">
                <%= link_to "View Workspace", workspace_path(workspace), class: "btn btn-outline-primary btn-block" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @owned_workspaces.none? && @joined_workspaces.none? %>
    <div class="text-center py-5">
      <div class="mb-3">
        <span style="font-size: 4rem;">üè¢</span>
      </div>
      <h3>You are not a member of any workspaces yet.</h3>
      <p class="text-muted">Create a new workspace or search for an existing one to get started.</p>
    </div>
  <% end %>
  
<% end %>