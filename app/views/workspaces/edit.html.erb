<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow-sm">
      <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
        <h2 class="text-center mb-0">Edit Workspace</h2>
      </div>
      <div class="card-body p-4">
        <%= form_with(model: @workspace, local: true) do |form| %>
          <% if @workspace.errors.any? %>
            <div class="alert alert-danger">
              <h5 class="alert-heading"><%= pluralize(@workspace.errors.count, "error") %> prohibited this workspace from being saved:</h5>
              <ul class="mb-0 pl-3">
                <% @workspace.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group mb-3">
            <%= form.label :name, "Workspace Name", class: "font-weight-bold" %>
            <%= form.text_field :name, class: "form-control form-control-lg" %>
          </div>

          <div class="form-group mb-4">
            <%= form.label :description, class: "font-weight-bold" %>
            <%= form.text_area :description, class: "form-control", rows: 4 %>
          </div>

          <div class="actions d-grid gap-2">
            <%= form.submit "Save Changes", class: "btn btn-primary btn-lg btn-block" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer bg-light text-center py-3">
        <%= link_to "Cancel", workspace_path(@workspace), class: "text-muted text-decoration-none" %>
      </div>
    </div>
  </div>
</div>