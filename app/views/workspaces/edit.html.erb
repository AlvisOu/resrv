<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow-sm">
      <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
        <h2 class="text-center mb-0">Edit Workspace</h2>
      </div>
      <div class="card-body p-4">
        <%= render "form", workspace: @workspace, submit_text: "Save Changes" %>

        <div class="mt-5 pt-4 border-top">
          <h5 class="text-danger mb-3">Danger Zone</h5>
          <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded border border-danger">
            <div>
              <h6 class="mb-1 text-danger">Delete this workspace</h6>
              <p class="mb-0 small text-muted">This action cannot be undone.</p>
            </div>
            <%= button_to "Delete Workspace",
                          workspace_user_to_workspace_path(@workspace),
                          method: :delete,
                          class: "btn btn-outline-danger btn-sm",
                          data: { confirm: "OWNER: Are you sure? This will permanently delete this workspace for ALL members." } %>
          </div>
        </div>
      </div>
      <div class="card-footer bg-light text-center py-3">
        <%= link_to "Cancel", workspace_path(@workspace), class: "text-muted text-decoration-none" %>
      </div>
    </div>
  </div>
</div>