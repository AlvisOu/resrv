<h1>Log In</h1>

<%= form_with(scope: :session, url: login_path) do |form| %>

  <div class="field">
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit "Log In" %>
  </div>

  <div class="field">
    <%= link_to "Sign up", signup_path %> |
    <%= link_to "Forgot password?", new_password_reset_path %>
  </div>
<% end %>